<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @equipmenttype.id %></h1>
    <a href="<%= url_for :action => :show, :id => @equipmenttype.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @equipmenttype.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @equipmenttype.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="equipmenttype[id]" class="fieldLabel">Id</label>
            <input type="text" id="equipmenttype[id]" name="equipmenttype[id]" value="<%= @equipmenttype.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="equipmenttype[description]" class="fieldLabel">Description</label>
            <input type="text" id="equipmenttype[description]" name="equipmenttype[description]" value="<%= @equipmenttype.description %>" <%= placeholder( "Description" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="equipmenttype[code]" class="fieldLabel">Code</label>
            <input type="text" id="equipmenttype[code]" name="equipmenttype[code]" value="<%= @equipmenttype.code %>" <%= placeholder( "Code" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="equipmenttype[capacity]" class="fieldLabel">Capacity</label>
            <input type="text" id="equipmenttype[capacity]" name="equipmenttype[capacity]" value="<%= @equipmenttype.capacity %>" <%= placeholder( "Capacity" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="equipmenttype[speed]" class="fieldLabel">Speed</label>
            <input type="text" id="equipmenttype[speed]" name="equipmenttype[speed]" value="<%= @equipmenttype.speed %>" <%= placeholder( "Speed" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
