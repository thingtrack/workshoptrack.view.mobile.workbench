<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @area.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @area.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="area[name]" class="fieldLabel">Name</label>
            <input type="text" id="area[name]" name="area[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="area[location_id]" class="fieldLabel">Location</label>
            <input type="text" id="area[location_id]" name="area[location_id]" <%= placeholder("Location") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
