<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @equipment.object %>
    <h1>Edit <%= @equipment.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @equipment.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @equipment.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="equipment[id]" value="<%= @equipment.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Description: </td>
              <td class="itemValue"><input type="text" name="equipment[description]" value="<%= @equipment.description %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Model: </td>
              <td class="itemValue"><input type="text" name="equipment[model]" value="<%= @equipment.model %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Lock: </td>
              <td class="itemValue"><input type="text" name="equipment[lock]" value="<%= @equipment.lock %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Mac address: </td>
              <td class="itemValue"><input type="text" name="equipment[mac_address]" value="<%= @equipment.mac_address %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Type: </td>
              <td class="itemValue"><input type="text" name="equipment[type_id]" value="<%= @equipment.type_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Bin: </td>
              <td class="itemValue"><input type="text" name="equipment[bin_id]" value="<%= @equipment.bin_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Area: </td>
              <td class="itemValue"><input type="text" name="equipment[area_id]" value="<%= @equipment.area_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
