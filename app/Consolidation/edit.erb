<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @consolidation.i %></h1>
    <a href="<%= url_for :action => :show, :id => @consolidation.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @consolidation.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @consolidation.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="consolidation[i]" class="fieldLabel">I</label>
            <input type="text" id="consolidation[i]" name="consolidation[i]" value="<%= @consolidation.i %>" <%= placeholder( "I" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
