<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @organization.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @organization.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="organization[name]" class="fieldLabel">Name</label>
            <input type="text" id="organization[name]" name="organization[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="organization[user_id]" class="fieldLabel">User</label>
            <input type="text" id="organization[user_id]" name="organization[user_id]" <%= placeholder("User") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
