<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @organization.name %></h1>
    <a href="<%= url_for :action => :show, :id => @organization.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @organization.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @organization.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="organization[name]" class="fieldLabel">Name</label>
            <input type="text" id="organization[name]" name="organization[name]" value="<%= @organization.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="organization[user_id]" class="fieldLabel">User</label>
            <input type="text" id="organization[user_id]" name="organization[user_id]" value="<%= @organization.user_id %>" <%= placeholder( "User" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
