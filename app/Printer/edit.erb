<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @printer.id %></h1>
    <a href="<%= url_for :action => :show, :id => @printer.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @printer.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @printer.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="printer[id]" class="fieldLabel">Id</label>
            <input type="text" id="printer[id]" name="printer[id]" value="<%= @printer.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
